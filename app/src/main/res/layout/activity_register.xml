<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ritik.project.dummy.RegisterActivity"
    android:background="@android:color/darker_gray"
    tools:background="@android:color/holo_blue_dark">


    <EditText
        android:layout_width="300dp"
        android:inputType="textPersonName"
        android:ems="25"
        android:id="@+id/register_name"
        android:background="@android:color/holo_blue_light"
        android:layout_height="40dp"
        android:hint="Name"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        android:capitalize="words" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:ems="9"
        android:id="@+id/register_roll"
        android:background="@android:color/holo_blue_light"
        android:hint="Roll No."
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_name"
        android:layout_marginTop="12dp"
        android:textAllCaps="true"
        android:inputType="textCapCharacters"
        android:capitalize="characters" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/register_pass"
        android:background="@android:color/holo_blue_light"
        android:hint="Password"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/register_roll" />

    <EditText
        android:layout_height="40dp"
        android:ems="10"
        android:id="@+id/register_phone"
        android:background="@android:color/holo_blue_light"
        android:layout_width="300dp"
        android:hint="Phone"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/register_pass"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:inputType="phone" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:ems="10"
        android:id="@+id/register_email"
        android:background="@android:color/holo_blue_light"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/register_phone"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:hint="Email"
        android:inputType="textWebEmailAddress" />

    <Button
        android:text="Register"
        android:layout_width="300dp"
        android:id="@+id/register"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/register_email"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.39"
        android:layout_height="60dp"
        android:background="@android:color/holo_blue_bright"
        app:layout_constraintHorizontal_bias="0.47" />
</android.support.constraint.ConstraintLayout>
